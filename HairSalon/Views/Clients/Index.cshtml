@{
  Layout = "_Layout";
}

@using Organization.Models;
@model List<Organization.Models.Client>;

<h1>Clients</h1>

@if (@Model.Count == 0)
{
  <h3>No clients have been added yet!</h3>
} 

<ul>
  @foreach(Client client in Model)
  {
      <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId }) | @client.Employee.Name</li>
  }
</ul>

@if (ViewBag.EmployeeCount > 0)
{
<p class="btn btn-light">@Html.ActionLink("Add new client", "Create")</p>
}
<p class="btn btn-light">@Html.ActionLink("Home", "Index", "Home")</p>