@{
  Layout = "_Layout";
}

@using Organization.Models;
@model List<Organization.Models.Employee>;

<h1>Employees</h1>

@if (@Model.Count == 0)
{
  <h3>No employees have been added yet!</h3>
} 

<ul>
  @foreach(Employee employee in Model)
  {
      <li>@Html.ActionLink($"{employee.Name}", "Details", new { id = employee.EmployeeId })</li>
  }
</ul>

<p class="btn btn-light">@Html.ActionLink("Add new employee", "Create")</p>
<p class="btn btn-light">@Html.ActionLink("Back to Home", "Index", "Home")</p>