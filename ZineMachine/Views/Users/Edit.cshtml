@{
  Layout = "_Layout";
}

@model Organization.Models.User

<h2>Editing user <strong>@Html.DisplayFor(model => model.Name)</strong></h2>
<hr>
@using (Html.BeginForm())
{
  <div class="form-group">
  @Html.HiddenFor(model => model.UserId)
  </div>
  <div class="form-group">
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name, new {@Class = "form-control"})
  </div>
  <input class="btn btn-light form-group" type="submit" value="Save" />
}
<p class="btn btn-light">@Html.ActionLink("Cancel", "Index")</p>